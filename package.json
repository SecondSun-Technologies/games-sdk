{
  "name": "@secondsuntech/games-sdk",
  "version": "0.1.0",
  "description": "Game platform SDK for SecondSun - games are unprivileged, stateless React modules",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./dev": {
      "import": "./dist/dev/index.js",
      "types": "./dist/dev/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "dev": "vite",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "react": "^18.2.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.50.1",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  },
  "keywords": [
    "games",
    "sdk",
    "react",
    "cognitive",
    "mental-health",
    "secondsun"
  ],
  "author": "SecondSun Technologies",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/SecondSun-Technologies/games-sdk.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}